<mvc:View
    controllerName="project2.controller.App"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Button
        id="idB"
        text="{i18n>showHelloButtonText}"
        press=".onShowHello"
    />
    <Input
        id="idI"
        value="{/recipient/name}"
        description="Hello {/recipient/name}"
        valueLiveUpdate="true"
        width="60%"
    />
</mvc:View>









